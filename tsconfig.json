{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@routers/*": ["src/routers/*"],
      "@models/*": ["src/models/*"],
      "@common/*": ["src/common/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@services/*": ["src/services/*"],
      "@entities/*": ["src/entities/*"],
      "@dtos/*": ["src/dtos/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
